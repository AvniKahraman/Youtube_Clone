<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/avni"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/youtubeImage"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lala" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:src="@drawable/tv" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/avatar"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp">

           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginEnd="4dp"
               android:layout_marginRight="4dp"
               android:layout_weight="1"
               android:drawableLeft="@drawable/history"
               android:padding="15dp"
               android:text="Google"
               android:textAllCaps="false"
               android:textColor="@color/black"
               android:backgroundTint="@color/white"></Button>


       </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/hp_homePage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/homepage"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/hp_shorts"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/shorts"
            />

        <ImageView
            android:id="@+id/hp_plus"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/plus"/>

        <ImageView
            android:id="@+id/subsImageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/subs" />

        <ImageView
            android:id="@+id/bookstore"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/bookstore"/>

    </LinearLayout>

</LinearLayout>
