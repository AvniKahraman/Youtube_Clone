<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/avni"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/youtubeImage"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lala" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:src="@drawable/tv" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/avatar"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:clickable="true"
           android:id="@+id/historyBar">

           <ImageView
               android:id="@+id/past"
               android:layout_width="30dp"
               android:layout_height="match_parent"
               android:layout_marginStart="10dp"
               android:src="@drawable/history"/>

           <TextView
               android:layout_width="60dp"
               android:layout_height="match_parent"
               android:layout_marginStart="10dp"
               android:text="History"
               android:gravity="center_vertical"
               android:textStyle="bold"
               android:textSize="17dp"
               android:textColor="@color/black"/>


    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="View All"
        android:layout_marginStart="230dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#0D7CD5"/>

       </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/hp_homePage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/homepage"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/hp_shorts"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/shorts"
            />

        <ImageView
            android:id="@+id/hp_plus"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/plus"/>

        <ImageView
            android:id="@+id/subsImageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/subs" />

        <ImageView
            android:id="@+id/bookstore"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/bookstore"/>

    </LinearLayout>

</LinearLayout>
