<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/avni"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/youtubeImage"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lala" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:src="@drawable/tv" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/avatar"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/historyBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/past"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/history" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="230dp"
                android:gravity="center_vertical"
                android:text="View All"
                android:textColor="#0D7CD5"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalbook"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleviewpast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </HorizontalScrollView>

            <View
                android:id="@+id/separator"
                android:layout_width="410dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#515050" />


            <LinearLayout
                android:id="@+id/playlistbar"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/playlist"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/playlist"/>


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="Playlist"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="230dp"
                    android:gravity="center_vertical"
                    android:text="View All"
                    android:textColor="#0D7CD5"
                    android:textStyle="bold" />


            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/horizontalbooks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleviewplaylist"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



            </HorizontalScrollView>

            <View
                android:id="@+id/separators"
                android:layout_width="410dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#515050" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/yourVideos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/dowlad" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="Your Videos"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/download"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/download1" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="Downloads"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/filmbar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/film"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:gravity="center_vertical"
                        android:text="Your Films"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:id="@+id/patato">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/makas"/>


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:gravity="center_vertical"
                        android:text="Your Clips"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"/>




                </LinearLayout>



        </LinearLayout>








        </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:id="@+id/altbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hp_homePage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/homepage"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/hp_shorts"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/shorts" />

        <ImageView
            android:id="@+id/hp_plus"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/subsImageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/subs" />

        <ImageView
            android:id="@+id/bookstore"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/bookstore" />

    </LinearLayout>



</LinearLayout>








